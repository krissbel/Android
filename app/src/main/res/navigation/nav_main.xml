<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_main"
    app:startDestination="@id/feedFragment">

    <fragment
        android:id="@+id/feedFragment"
        android:name="ru.netology.nmedia.activity.FeedFragment"
        android:label="fragment_feed"
        tools:layout="@layout/fragment_feed" >
        <action
            android:id="@+id/toPostContentFragment"
            app:destination="@id/postContentFragment" />
        <action
            android:id="@+id/action_feedFragment_to_postContentDetailsFragment"
            app:destination="@id/postContentDetailsFragment" />

    </fragment>
    <fragment
        android:id="@+id/postContentFragment"
        android:name="ru.netology.nmedia.activity.PostContentFragment"
        android:label="fragment_post_content"
        tools:layout="@layout/fragment_post_content" >
    <argument
        android:name="initial_content"
        app:argType="string"
        app:nullable="true"/>
    </fragment>
    <fragment
        android:id="@+id/postContentDetailsFragment"
        android:name="ru.netology.nmedia.activity.PostContentDetailsFragment"
        android:label="PostContentDetailsFragment"
        tools:layout="@layout/fragment_post_content_details">
        <action
            android:id="@+id/action_postContentDetailsFragment_to_postContentFragment"
            app:destination="@id/postContentFragment" />
    </fragment>

</navigation>